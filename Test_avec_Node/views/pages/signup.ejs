<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
            <title>Labyrinthe des Hugo</title>
	</head>
<body>
    <% include ../partials/header %>
	<div class="container">
        <% include ../partials/msg %>
        <% if((typeof success != 'undefined')&&(success="true")) {%><a href="/">Now, please login !</a><% } else {%>
		<form action="/signup" class="form-signin" method="post">
			<h2 class="form-signin-heading">S'inscrire</h2>
			<label for="email" class="sr-only">Adresse email</label>
			<input name="email" type="email" id="email" class="form-control" placeholder="Adresse email" required autofocus>
			<label for="username" class="sr-only">Pseudo</label>
			<input name="username" type="text" id="username" class="form-control" placeholder="Pseudo" required>
			<label for="password" class="sr-only">Mot de Passe</label>
			<input name="password" type="password" id="password" class="form-control" placeholder="Mot de Passe" required>
			<button class="btn btn-lg btn-primary btn-block" type="submit">Inscription</button>
		</form>
        <%}%>
    </div> <!-- /container -->
	<footer>
		<% include ../partials/footer %>
	</footer>
</body>
</html>